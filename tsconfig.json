{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"module": "esnext",
		"target": "es6",
		"strict": true,
		"moduleResolution": "node",
		"baseUrl": "./",
		"paths": {
		  "$app/*": ["src/$app/*"],
		  "$lib/*": ["src/lib/*"]
		}
	},
	"include": ["src/**/*", "node_modules/svelte-routing/**/*"],
	"types": ["svelte", "jest", "msw"]
}