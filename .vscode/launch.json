{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Run npm dev with --open",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
          "run",
          "dev",
          "--",
          "--open"  // Pass --open to the dev script
        ],
        "console": "integratedTerminal",
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }
  